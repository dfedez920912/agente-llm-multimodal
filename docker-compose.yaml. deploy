# docker-compose.yml
version: '3.8'
services:
  llm-agent:
    image: ghcr.io/dfedez920912/agente-llm-multimodal:main # <-- Añadir esta línea
    # build: . # <-- Comentar o eliminar esta línea
    restart: always
    environment:
      - API_KEY=${API_KEY}
      - LLM_MODEL_NAME=${LLM_MODEL_NAME}
      - VL_LLM_MODEL_NAME=${VL_LLM_MODEL_NAME}
      - ASR_MODEL_NAME=${ASR_MODEL_NAME}
      - MODEL_LOADING_STRATEGY=${MODEL_LOADING_STRATEGY}
      - NVIDIA_VISIBLE_DEVICES=all # <-- Asegúrate de tener esta línea
    ports:
      - "8000:8000"
    volumes:
      - model-cache:/root/.cache/huggingface
    runtime: nvidia # <-- Reemplazar 'deploy' por esta línea (crucial para Windows/WSL2)
    # deploy: # <-- Eliminar esta sección completa
    #   resources:
    #     reservations:
    #       devices:
    #         - driver: nvidia
    #           count: all
    #           capabilities: [gpu]

volumes:
  model-cache:
    driver: local

networks:
  default:
    name: ${CONTAINER_NAME}  # <-- Nombre de la red predeterminada
    #driver: local